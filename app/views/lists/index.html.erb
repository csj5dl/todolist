<div class="container">

  <%= link_to 'New To Do List', new_list_path , class: 'btn btn-info btn-lg' %>

  <br>
  <br>
  <table class="table table-striped table-hover">
    <thead class="bg-primary">
      <div class="row">
        <tr>
          <div class="col-xs-4"><td>代辦事項</td></div>
          <div class="col-xs-4"><td>日期</td></div>
          <div class="col-xs-2"><td>編輯</td></div>
          <div class="col-xs-2"><td>刪除</td></div>
        </tr>
      </div>
    </thead>
    <tbody>
      <% @lists.each do |list| %>
        <tr>
          <td><%= link_to list.name, list_path(list) %></td>
          <td><%= list.duedate %></td>
          <td><%= link_to edit_list_path(list) do %><span class="glyphicon glyphicon-pencil"></span><% end %></td>
          <td>
          <% if list.duedate < Date.today %>
          <% else %>
            <%= link_to list_path(list), method: :delete, data:{ confirm: "Are you sure??" } do %><span class="glyphicon glyphicon-trash"></span><% end %>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
